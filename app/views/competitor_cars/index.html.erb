
<h1 class='title'>Konkurrenz Käufe</h1> 

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Chassi</th>
      <th>Auktion</th>
      <th>Model</th>
      <th>Verkaufsdatum</th>
      <th colspan="3"></th>
    </tr>  
  </thead>
  
  <tbody>  
    <% @competitor_cars.each do |cc| %>
    <% car_template = CarTemplate.find(cc.car_template_id) %>
      <tr>
        <td><%= cc.competitor_name %></td>
        <td><%= cc.chassi %></td>
        <td><%= cc.auction %></td>
        <td><%= car_template.model %></td>
        <td><%= cc.sold_date.strftime('%d.%m.%Y') %></td>       
        <td><%= cc.sold_car_notices %></td>
        <td><%= link_to 'Zeige vollständig', competitor_car_path(id: cc) %>
        <td><%= link_to 'Bearbeiten', edit_competitor_car_path(id: cc) %></td>
        <td><%= link_to 'Löschen', cc, method: :delete, data: { confirm: 'Sind Sie sich sicher?' } %></td>
      </tr>
    <% end %>  
  </tbody>
</table>   
</br>
<ul class='link_under_table'><%= link_to 'Neuer Konkurrenzkauf', new_competitor_car_path %></ul>  
</br>
